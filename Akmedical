variable "cluster_identifier" {
  description = "The identifier for the Redshift cluster."
  type        = string
}

variable "database_name" {
  description = "The name of the default database in the cluster."
  type        = string
}

variable "default_iam_role_arn" {
  description = "The ARN of the IAM role to be associated with the cluster."
  type        = string
}

variable "node_type" {
  description = "The node type to be provisioned for the cluster."
  type        = string
}

variable "cluster_type" {
  description = "The type of the cluster (single-node or multi-node)."
  type        = string
  default     = "single-node"
}

variable "master_password" {
  description = "The password for the master database user."
  type        = string
}

variable "master_username" {
  description = "The username for the master database user."
  type        = string
}

variable "vpc_security_group_ids" {
  description = "A list of security group IDs to associate with the cluster."
  type        = list(string)
}

variable "cluster_subnet_group_name" {
  description = "The name of the cluster subnet group."
  type        = string
}

variable "availability_zone" {
  description = "The availability zone to create the cluster in."
  type        = string
}

variable "availability_zone_relocation_enabled" {
  description = "Indicates whether relocation is enabled for the cluster."
  type        = bool
  default     = false
}

variable "preferred_maintenance_window" {
  description = "The preferred maintenance window for the cluster."
  type        = string
}

variable "cluster_parameter_group_name" {
  description = "The name of the cluster parameter group."
  type        = string
}

variable "automated_snapshot_retention_period" {
  description = "The number of days to retain automated snapshots."
  type        = number
}

variable "port" {
  description = "The port number on which the cluster accepts incoming connections."
  type        = number
  default     = 5439
}

variable "cluster_version" {
  description = "The version of the cluster."
  type        = string
}

variable "allow_version_upgrade" {
  description = "Indicates whether version upgrades are allowed for the cluster."
  type        = bool
  default     = true
}

variable "apply_immediately" {
  description = "Indicates whether changes should be applied immediately."
  type        = bool
  default     = true
}

variable "aqua_configuration_status" {
  description = "The status of the Aqua (advanced query accelerator) configuration."
  type        = string
}

variable "number_of_nodes" {
  description = "The number of compute nodes in the cluster."
  type        = number
  default     = 1
}

variable "publicly_accessible" {
  description = "Indicates whether the cluster is publicly accessible."
  type        = bool
  default     = false
}

variable "encrypted" {
  description = "Indicates whether the cluster is encrypted."
  type        = bool
  default     = false
}

variable "enhanced_vpc_routing" {
  description = "Indicates whether enhanced VPC routing is enabled for the cluster."
  type        = bool
  default     = false
}
